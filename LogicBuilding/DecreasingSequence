public Result decreasingSeq(int[] input1, int input2){
    int output1 = 0; // Number of decreasing sequences
    int output2 = 0; // Length of the longest decreasing sequence

    if (input1 == null || input2 <= 0) {
        return new Result(0, 0);
    }

    int currentSequenceLength = 1;
    boolean inSequence = false;

    for (int i = 1; i < input2; i++) {
        if (input1[i] < input1[i - 1]) {
            currentSequenceLength++;
            if (!inSequence) {
                output1++;
                inSequence = true;
            }
        } else {
            if (inSequence) {
                output2 = Math.max(output2, currentSequenceLength);
            }
            currentSequenceLength = 1;
            inSequence = false;
        }
    }

    if (inSequence) {
        output2 = Math.max(output2, currentSequenceLength);
    }
    
    return new Result(output1, output2);
}
